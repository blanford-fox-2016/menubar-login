extends navbar

block content
  if typeof (session_user_id) === "undefined"
    .login#login
      form(role='form', action="/", method="post")
        .form-group
          label(for='username') Username
          input#name.form-control(type='text', placeholder='Enter your username', name="username", required)
        .form-group
          label(for='password') Password
          input#name.form-control(type='password', placeholder='Enter your password', name="password", required)
        .checkbox
          label
            input(type='checkbox', name="remember_me", required)
            |  Remember Me
        if typeof err != "undefined"
          p #{err}
        button.btn.btn-default(type='submit') Login
  else
    p Hi #{session_user_name}
